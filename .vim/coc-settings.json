{
  "languageserver": {
    "golang": {
      "command": "gopls",
      "args": [],
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    },

    "intelephense": {
        "command": "node",
        "args": ["/usr/local/lib/node_modules/intelephense/lib/intelephense.js", "--stdio"],
        "filetypes": ["php"]
    },

    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    }
  }
}
